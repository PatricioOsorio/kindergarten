@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<div class="row vh-100 d-flex justify-content-center">
  <article class="mycard">
    <div class="circle"></div>
    <div class="circle"></div>
    <div class="card__content p-5" data-aos="zoom-in">

      <h1 class="text-center mb-4" data-aos="zoom-in" data-aos-delay="300">
        Recuperar contraseña
      </h1>
      <form id="account" method="post">

        <!-- Email input -->
        <div class="form-floating mb-3"
             data-aos="fade-right"
             data-aos-delay="300">
          <input asp-for="Input.Email"
                 class="form-control"
                 autocomplete="username"
                 aria-required="true" />
          <label asp-for="Input.Email" class="form-label"></label>
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Submit button -->
        <button id="login-submit"
                type="submit"
                class="btn btn-primary w-100 mx-0 mb-4"
                data-aos="zoom-in"
                data-aos-delay="300">
          <i class="fas fa-edit me-1"></i>Recuperar contraseña
        </button>
      </form>
    </div>
  </article>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
