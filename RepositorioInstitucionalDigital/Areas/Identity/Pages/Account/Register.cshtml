@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="row vh-100 d-flex justify-content-center">
  <article class="mycard">
    <div class="circle"></div>
    <div class="circle"></div>
    <div class="card__content p-5" data-aos="zoom-in">

      <h1 class="text-center mb-4" data-aos="zoom-in" data-aos-delay="300">
        Crear nueva cuenta
      </h1>
      <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

        <!-- Email input -->
        <div class="form-floating mb-3"
             data-aos="fade-right"
             data-aos-delay="300">
          <input asp-for="Input.Email"
                 class="form-control"
                 autocomplete="username"
                 aria-required="true" />
          <label asp-for="Input.Email" class="form-label"></label>
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Password input -->
        <div class="form-floating mb-3"
             data-aos="fade-left"
             data-aos-delay="300">
          <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
          <label asp-for="Input.Password" class="form-label"></label>
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- Confirm Password input -->
        <div class="form-floating mb-3"
             data-aos="fade-right"
             data-aos-delay="300">
          <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
          <label asp-for="Input.ConfirmPassword" class="form-label"></label>
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Submit button -->
        <button id="registerSubmit"
                type="submit"
                class="btn btn-primary w-100 mx-0 mb-4"
                data-aos="zoom-in"
                data-aos-delay="300">
          <i class="fas fa-user-edit me-1"></i>Registrar
        </button>

        <div class="text-center mb-4"
             data-aos="fade-right"
             data-aos-delay="300">
          ¿Ya tienes cuenta?
          <a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none">Iniciar sesion</a>
        </div>

      </form>
    </div>
  </article>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
