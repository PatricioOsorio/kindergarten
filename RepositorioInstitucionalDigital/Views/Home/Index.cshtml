<section id="contact" class="row mb-5">
  <h2 class="text-center fw-bold display-4 text-gradient" data-aos="zoom-in-up">Contacto</h2>
  <div class="col-lg-6 d-flex align-items-center" data-aos="fade-right">
    <img src="~/images/svg/form.svg  " class="img-fluid" alt="" />
  </div>
  <div class="col-lg-6" data-aos="fade-left">
    <form action="#" id="form-contact">
      <div class="form-floating mb-3">
        <input type="text"
               class="form-control"
               id="fullname-student"
               name="fullname-student"
               placeholder="name@example.com"
               required />
        <label for="fullname-student">Nombre completo</label>
      </div>

      <div class="form-floating mb-3">
        <input type="date"
               class="form-control"
               id="birthday"
               name="birthday"
               required />
        <label for="birthday">Fecha de nacimiento</label>
      </div>

      <div class="form-floating mb-3">
        <select class="form-select" id="floatingSelect" required>
          <!-- <option selected>---</option> -->
          <option value="man">Hombre</option>
          <option value="woman">Mujer</option>
        </select>
        <label for="floatingSelect">Selecciona sexo</label>
      </div>

      <div class="form-floating mb-3">
        <input type="number"
               class="form-control"
               id="age"
               name="age"
               placeholder="edad"
               required
               min="2"
               max="7" />
        <label for="age">Edad</label>
      </div>

      <div class="form-floating mb-3">
        <input type="text"
               class="form-control"
               id="curp"
               name="curp"
               placeholder="curp"
               required
               minlength="18"
               maxlength="18"
               pattern="([A-Z][AEIOUX][A-Z]{2}\d{2}(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\d|3[01])[HM](?:AS|B[CS]|C[CLMSH]|D[FG]|G[TR]|HG|JC|M[CNS]|N[ETL]|OC|PL|Q[TR]|S[PLR]|T[CSL]|VZ|YN|ZS)[B-DF-HJ-NP-TV-Z]{3}[A-Z\d])(\d)" />
        <label for="curp">Curp</label>
      </div>

      <div class="mb-3">
        <label for="file" class="form-label">Acta nacimiento</label>
        <input class="form-control" type="file" id="file" required />
      </div>

      <div class="form-floating mb-3">
        <input type="text"
               class="form-control"
               id="fullname-tutor"
               name="fullname-tutor"
               placeholder="name@example.com"
               required />
        <label for="fullname-tutor">Nombre completo del tutor</label>
      </div>

      <div class="form-floating mb-3">
        <input type="email"
               class="form-control"
               id="email"
               name="email"
               placeholder="email"
               required />
        <label for="email">Correo electronico del tutor</label>
      </div>

      <button class="btn btn-primary">
        <i class="fas fa-paper-plane me-1"></i>Enviar
      </button>
      <button class="btn btn-outline-secondary" type="reset">
        <i class="fas fa-trash me-1"></i>Limpiar
      </button>
    </form>
  </div>
</section>

<section id="mailbox" class="row mb-3">
  <h2 class="text-center fw-bold display-4 text-gradient" data-aos="zoom-in-up">Buzón</h2>
  <div class="col-lg-6" data-aos="fade-right">
    <form action="#" id="form-mailbox">
      <div class="form-floating mb-3">
        <input type="text"
               class="form-control"
               id="subject"
               name="subject"
               placeholder="name@example.com"
               required />
        <label for="subject">Asunto</label>
      </div>

      <div class="form-floating mb-3">
        <input type="email"
               class="form-control"
               id="email"
               name="email"
               placeholder="email"
               required />
        <label for="email">Correo electronico</label>
      </div>

      <div class="form-floating mb-3">
        <textarea class="form-control"
                  placeholder="Aquí va tu comentario"
                  id="comment"
                  required></textarea>
        <label for="comment">Comentarios</label>
      </div>

      <button class="btn btn-primary">
        <i class="fas fa-paper-plane me-1"></i>Enviar
      </button>

      <button class="btn btn-outline-secondary" type="reset">
        <i class="fas fa-trash me-1"></i>Limpiar
      </button>
    </form>
  </div>
  <div class="col-lg-6" data-aos="fade-left">
    <img class="img-fluid" src="~/images/svg/mail3.svg" alt="" />
  </div>
</section>